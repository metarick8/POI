        "/api/profile": {
            "get": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Get authenticated user profile",
                "description": "Returns profile details based on the token (User, Coach, Debater, Judge)",
                "operationId": "d32e56b6274eb68e980da6d91fbe9fd8",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "oneOf": [
                                        {
                                            "schema": "User",
                                            "required": [
                                                "id",
                                                "first_name",
                                                "last_name",
                                                "email"
                                            ],
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "first_name": {
                                                    "type": "string",
                                                    "example": "Jad"
                                                },
                                                "last_name": {
                                                    "type": "string",
                                                    "example": "Alhalabi"
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "example": "jadalhalabi88@gmail.com"
                                                },
                                                "profile_picture_url": {
                                                    "type": "string",
                                                    "example": "https://res.cloudinary.com/dts4tnvo4/image/upload/v1745503749/Profile%20picture/user/example.jpg"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        {
                                            "schema": "Coach",
                                            "required": [
                                                "id",
                                                "first_name",
                                                "last_name",
                                                "email",
                                                "team"
                                            ],
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 10
                                                },
                                                "first_name": {
                                                    "type": "string",
                                                    "example": "Coach Name"
                                                },
                                                "last_name": {
                                                    "type": "string",
                                                    "example": "Last Name"
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "example": "coach@email.com"
                                                },
                                                "profile_picture_url": {
                                                    "type": "string",
                                                    "example": "https://res.cloudinary.com/dts4tnvo4/image/upload/v1745503749/Profile%20picture/coach/example.jpg"
                                                },
                                                "team": {
                                                    "type": "array",
                                                    "items": {
                                                        "properties": {
                                                            "first_name": {
                                                                "type": "string",
                                                                "example": "Debater first name"
                                                            },
                                                            "last_name": {
                                                                "type": "string",
                                                                "example": "Debater last name"
                                                            },
                                                            "email": {
                                                                "type": "string",
                                                                "example": "debater@email.com"
                                                            },
                                                            "profile_picture_url": {
                                                                "type": "string",
                                                                "example": "https://res.cloudinary.com/dts4tnvo4/image/upload/v1745503749/Profile%20picture/debater/example.jpg"
                                                            }
                                                        },
                                                        "type": "object"
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        },
                                        {
                                            "schema": "Debater",
                                            "required": [
                                                "id",
                                                "first_name",
                                                "last_name",
                                                "email",
                                                "coach_name"
                                            ],
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 20
                                                },
                                                "first_name": {
                                                    "type": "string",
                                                    "example": "Debater Name"
                                                },
                                                "last_name": {
                                                    "type": "string",
                                                    "example": "Last Name"
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "example": "debater@email.com"
                                                },
                                                "profile_picture_url": {
                                                    "type": "string",
                                                    "example": "https://res.cloudinary.com/dts4tnvo4/image/upload/v1745503749/Profile%20picture/debater/example.jpg"
                                                },
                                                "coach_name": {
                                                    "type": "string",
                                                    "example": "Coach first name + Coach last name"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request - Invalid token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Invalid token"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized - Invalid or missing token"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
